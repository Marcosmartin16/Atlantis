                    android:fontFamily="@font/rowdies_regular"
                    android:padding="25dp"
                    android:text="Lobo marino"
                    android:textColor="@color/azul_titulo"
                    android:textSize="25sp" />


            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
